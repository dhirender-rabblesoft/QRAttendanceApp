<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"

        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cldata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="@dimen/_10sdp"
                 >
                <LinearLayout
                    android:id="@+id/llclient"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="horizontal"
                     android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/mediumfont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvclientname"
                        style="@style/regularfont"
                        android:layout_width="wrap_content"
                        android:text="N/A"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                         android:layout_marginStart="@dimen/_5sdp"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/_10sdp"
                        />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvdatelabel"
                    style="@style/mediumfont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Date :"
                    app:layout_constraintTop_toBottomOf="@+id/llclient"
                    android:textColor="@color/black_1"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                     />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvdate"
                    style="@style/regularfont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                     app:layout_constraintTop_toBottomOf="@+id/llclient"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/black_1"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintStart_toEndOf="@+id/tvdatelabel"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvinvoiceamountlabel"
                    style="@style/mediumfont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Authorised By : "
                    android:textColor="@color/black_1"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvdate" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvauthname"
                    style="@style/regularfont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="N/A"
                    android:textColor="@color/black_1"
                    android:textSize="@dimen/_10sdp"
                    app:layout_constraintStart_toEndOf="@+id/tvinvoiceamountlabel"
                    app:layout_constraintTop_toBottomOf="@+id/tvdate" />



            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvinvoicestatus"
                style="@style/mediumfont"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cldata"
                android:background="@drawable/blue_rounded"
                android:gravity="center"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:text="Give Feedback"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                />
            <View
                app:layout_constraintTop_toBottomOf="@id/tvinvoicestatus"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>