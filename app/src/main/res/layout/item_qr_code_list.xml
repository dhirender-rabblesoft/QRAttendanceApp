<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvlistContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_3sdp"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clcoantiner"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_qrCode"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ivcheck2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_qrCode"
                 android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvtitle"
                    style="@style/mediumfont"
                    android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="15-05-2022"
                    android:textColor="@color/black_1"
                    android:textSize="@dimen/_11sdp"
                   />
                   <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvcompanyname"
                    style="@style/mediumfont"
                    android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                     android:textColor="@color/black_1"
                    android:textSize="@dimen/_11sdp"
                      />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvclientname"
                    style="@style/mediumfont"
                    android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                     android:textColor="@color/black_1"
                    android:textSize="@dimen/_11sdp"
                      />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvclientaddress"
                    style="@style/mediumfont"
                    android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                     android:textColor="@color/black_1"
                    android:textSize="@dimen/_11sdp"
                      />
                  <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvbranch"
                    style="@style/mediumfont"
                    android:layout_width="wrap_content"
                      android:visibility="gone"
                     android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                     android:textColor="@color/black_1"
                    android:textSize="@dimen/_11sdp"
                      />


            </androidx.appcompat.widget.LinearLayoutCompat>



            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:id="@+id/ivcheck2"
                android:checked="true"
                android:layout_marginEnd="@dimen/_15sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />





        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>