<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="regularfont">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black_1</item>
    </style>

    <style name="mediumfont">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black_1</item>
    </style>

    <style name="semiboldfont">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black_1</item>
    </style>
    <!-- Alert Dialog -->
    <style name="customAlertheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>
    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="boldfont">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black_1</item>
    </style>
    <style name="transparent_dialog_borderless" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="mainbutton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:background">@drawable/color_round</item>
        <item name="singleLine">true</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>
    <style name="mainbutton3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:background">@drawable/color_round</item>
        <item name="singleLine">true</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="mainbutton2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:background">@drawable/round_color3</item>
        <item name="singleLine">true</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="checkin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="singleLine">true</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>


    <style name="materialStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/black_1</item>
        <item name="errorTextColor">@color/red</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="boxStrokeWidthFocused">@dimen/_1sdp</item>
        <item name="boxStrokeColor">@color/black_3</item>
        <item name="boxCornerRadiusTopStart">@dimen/_5sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_5sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_5sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_5sdp</item>

    </style>


    <style name="edittextlogintitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColorHint">@color/black_hint</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black_1</item>
        <item name="android:padding">@dimen/_13sdp</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>


    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>

</resources>